.col-md-6.bundle-item.d-flex.align-items-stretch{ id: "offer-#{offer.id}" }
  .card
    .card-body
      %h4.card-title
        = offer.name
      .text-muted
        = _("Provided by #{offer.service.name}")
      .card-text{ "data-controller" => "paragraph" }
        = render "services/offers/bundle_parameters",
              technical_parameters: offer.attributes.map(&:to_json)
